@model  Data.Model.Opportunity

@{
    ViewBag.Title = "Create an Opportunity";
}

<h2>@ViewBag.Title</h2>
<p>Use this form to create a volunteering opportunity for <b>@ViewBag.CompanyName</b></p>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Opportunity</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.OpportunityTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OpportunityTitle)
            @Html.ValidationMessageFor(model => model.OpportunityTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OpportunityDescription)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.OpportunityDescription)
            @Html.ValidationMessageFor(model => model.OpportunityDescription)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OpportunityAdditionalInformation)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.OpportunityAdditionalInformation)
            @Html.ValidationMessageFor(model => model.OpportunityAdditionalInformation)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OpportunityDate)
        <div class="editor-field">
            @Html.EditorFor(model => model.OpportunityDate)
            @Html.ValidationMessageFor(model => model.OpportunityDate)
        </div>
        </div>     

        <div class="editor-label">
            @Html.LabelFor(model => model.OpportunityLocationName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OpportunityLocationName)
            @Html.ValidationMessageFor(model => model.OpportunityLocationName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OpportunityPostcode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OpportunityPostcode, new { style = "width: 100px;" })
            @Html.ValidationMessageFor(model => model.OpportunityPostcode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MinNumberofVolunteers)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MinNumberofVolunteers, new { style = "width: 50px;" })
            @Html.ValidationMessageFor(model => model.MinNumberofVolunteers)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaxNumberofVolunteers)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxNumberofVolunteers, new { style = "width: 50px;" })
            @Html.ValidationMessageFor(model => model.MaxNumberofVolunteers)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RecurringEventFlag)
        </div>
        <div class="editor-field">
            @Html.CheckBoxFor(model => model.RecurringEventFlag)        
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
